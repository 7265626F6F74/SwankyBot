FROM arm32v6/alpine:3.8
MAINTAINER uberentwickelt
ENV name SwankyBot
ENV token null
RUN apk add --no-cache python3 wget unzip git \
 && git clone https://github.com/python-telegram-bot/python-telegram-bot --recursive \
 && cd python-telegram-bot \
 && python3 setup.py install \
 && wget -O /tmp/master.zip https://github.com/uberentwickelt/${name}/archive/master.zip \
 && mkdir -p /bot \
 && unzip -d /bot /tmp/master.zip \
 && rm /tmp/master.zip
ENTRYPOINT sh -c "python3 /bot/${name}-master/bot.py ${token}"
